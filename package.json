{
  "name": "starkms",
  "private": true,
  "description": "An exploratory Starknet Key Management System.",
  "homepage": "https://github.com/teddyjfpender/starkms",
  "license": "Apache-2.0",
  "scripts": {
    "build": "turbo run build",
    "b": "bun run build",
    "build:extension": "turbo run build --filter=@starkms/extension...",
    "build:features": "turbo run build --filter=@starkms/features...",
    "story:features": "turbo run story:build --filter=@starkms/features",
    "dev:extension": "turbowatch extension.turbowatch.ts",
    "lint": "bun x biome check .",
    "lint:fix": "bun run lint --write",
    "test:unit": "turbo run test:unit",
    "test:e2e:extension": "turbo run test:e2e --filter=@starkms/extension",
    "format": "bun x biome check --write --unsafe .",
    "f": "bun run format",
    "typecheck": "tsc --noEmit",
    "ci": "bun run typecheck && bun run lint && bun run build && bun run test:unit",
    "cleanup": "turbo run cleanup && rimraf node_modules .turbo",
    "prepare": "husky install",
    "preinstall": "bun x only-allow bun"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@happy-dom/global-registrator": "^15.11.0",
    "@testing-library/react": "16.0.1",
    "@tsconfig/strictest": "2.0.5",
    "@turbo/gen": "2.0.9",
    "@types/bun": "^1.1.13",
    "autoprefixer": "10.4.19",
    "happy-dom": "14.12.3",
    "honkit": "^6.0.3",
    "husky": "9.1.4",
    "postcss": "8.4.40",
    "rimraf": "6.0.1",
    "tailwind-merge": "2.4.0",
    "tailwindcss": "3.4.7",
    "tailwindcss-animate": "1.0.7",
    "tsup": "8.2.3",
    "turbo": "2.0.9",
    "turbowatch": "2.29.4",
    "typescript": "5.6.3"
  },
  "workspaces": ["packages/*", "apps/*"],
  "packageManager": "bun@1.1.34",
  "dependencies": {
    "@noble/curves": "^1.9.0",
    "@scure/base": "^1.2.5"
  }
}
